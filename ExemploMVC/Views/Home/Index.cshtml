@{ ViewData["Title"] = "BlackJack"; }


<h1 style="color: white;">BlackJack</h1>

<div class="container-fluid">

    <div class="row">
        <div class="col-md-4">
            <h2 style="color: white; font-size: 25px;" id="nomeJogador1">
                Jogador 1

            </h2>
            <br /> <br />
            <img alt="carta1" src="/images/BlackJack.png" height="350" width="250" name="cartas1" id="cartas1">
            <br /> <br />
            <button type="button" class="btn btn-success" name="btn_jogador_1" id="btn_jogador_1" onclick="jogadas(1)" disabled>
                Jogar
            </button>
            <button type="button" class="btn btn-danger" name="btn_parar_1" id="btn_parar_1" onclick="parar1()" disabled>
                Parar
            </button>
        </div>
        <div class="col-md-4" style="color: white; font-size: 25px;" >
            <center>
                <h2 style="color: white; text-align: center;">
                    Partida
                </h2>
                <br /> <br />
                <center>
                    <button type="button" class="btn btn-success" name="btn_iniciar" id="btn_iniciar" onclick="iniciar()">
                        Iniciar
                    </button>


                    <button type="button" class="btn btn-danger" name="btn_reiniciar" id="btn_reiniciar" onclick="reiniciar()" disabled>
                        Reiniciar
                    </button>
                </center>

                <br /> <br />
                <div class="row h-100 justify-content-center align-items-center" style="color: white; font-size: 25px;" >

                    <div class="col-md-1">
                        <span class="badge badge-default" id="jogador1"> 0</span>
                    </div>
                    <div class="col-md-1">
                        <span class="badge badge-default"> X</span>
                    </div>
                    <div class="col-md-1">
                        <span class="badge badge-default" id="jogador2"> 0</span>
                    </div>
                </div>
                &nbsp&nbsp<span class="badge badge-default" id="resultado"> </span>
            </center>
        </div>

        <div class="col-md-4">
            <h2 style="color: white; font-size: 25px;" id="nomeJogador2">
                Jogador 2
            </h2>
            <br /> <br />
            <img alt="carta2" src="/images/BlackJack.png" height="350" width="250" name="cartas2" id="cartas2">
            <br /> <br />
            <button type="button" class="btn btn-success" name="btn_jogador_2" id="btn_jogador_2" onclick="jogadas(2)" disabled>
                Jogar
            </button>
            <button type="button" class="btn btn-danger" name="btn_parar_2" id="btn_parar_2" onclick="parar2()" disabled>
                Parar
            </button>


        </div>
    </div>
</div>